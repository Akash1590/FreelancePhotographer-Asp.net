@model CoolCat.PhotoGrapherLancer.Core.App.Models.ConfirmJobvm
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_ClientPage.cshtml";
}

<div class="tab-pane" id="Complain">

    @using (Html.BeginForm("jobConfirm", "Client", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <input name="ClientId" value="@Model.client.ClientId" class="form-control" id="ClientId" type="hidden">

        </div>
        <div class="form-group">
            <input name="PhotoGrapherID" value="@Model.PhotoGrapher.PhotoGrapherId" class="form-control" id="PhotoGrapherID" type="hidden">
        </div>
        <div class="form-group">
            <input name="PostId" value="@Model.jobpost.PostId" class="form-control" id="PostId" type="hidden">

        </div>
        <div class="form-group">
            <label for="inputEmail" class="col-sm-2 control-label" style="color:white">Client Name</label>

            <div class="col-sm-10">

                <input name="ClientName" value="@Model.client.Name" class="form-control" id="ClientName" readonly>
            </div>
        </div>
        <div class="form-group">
            <label for="inputPhone" class="col-sm-2 control-label"style="color:white">PhotoGrapherName</label>

            <div class="col-sm-10">
                <input type="text" class="form-control" value="@Model.PhotoGrapher.FullName" name="PhotographerName" id="PhotographerName" placeholder="PhotographerName" readonly>
            </div>
        </div>
        <div class="form-group">
            <label for="inputPhone" class="col-sm-2 control-label"style="color:white">Price</label>

            <div class="col-sm-10">
                <input type="text" class="form-control" value="@Model.jobpost.payment" name="Price" id="Price" placeholder="Price" readonly>
            </div>
        </div>
        <div class="form-group">
            <label for="inputPhone" class="col-sm-2 control-label" style="color:white">Type</label>

            <div class="col-sm-10">
                <input type="text" class="form-control" value="@Model.jobpost.Title" name="Type" id="Type" placeholder="Type" readonly>
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Confirm</button>
            </div>
        </div>
    }
</div>

