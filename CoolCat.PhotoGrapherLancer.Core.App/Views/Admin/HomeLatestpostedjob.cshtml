@model IEnumerable<CoolCat.PhotoGrapherLancer.Core.Entities.Client.ClientJobsPost>
@{
    ViewBag.Title = "Homelatestclient";
    Layout = null;
}

<div class="col-md-10">

    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6  toppad">


        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Latest PostedJob</h3>
            </div>
            <div class="panel-body">
               

                    <div class=" col-md-12 col-lg-12 col-xs-6 ">
                        <table class="table table-user-information">
                            <tbody>
                                @foreach (var item in Model.Take(3))
                                {
                                    <tr>
                                        <td>Title:</td>
                                        <td><a href="/Admin/postedjobdetails/@Html.DisplayFor(modelItem =>item.PostId)">@Html.DisplayFor(modelItem => item.Title)</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>


                    </div>
                </div>


            </div>
        </div>
    </div>


