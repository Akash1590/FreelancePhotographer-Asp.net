@model CoolCat.PhotoGrapherLancer.Core.Entities.PublicProfilePhotoGrapher.ClientComplain
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_AdminPage.cshtml";
}

<div class="tab-pane" id="Complain">

    @using (Html.BeginForm("PhotoGrapherWarning", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">




            
            <input name="Fk_PhotoGrapherID" type="hidden" value="@Model.Fk_PhotoGrapherID">


        </div>
        <div class="form-group">
            <label for="inputEmail" class="col-sm-2 control-label">Victim Name</label>

            <div class="col-sm-10">
                <input name="VictimName" value="@Model.VictimName" class="form-control" id="VictimName" placeholder="VictimName *" readonly>
            </div>
        </div>
        <div class="form-group">
            <label for="inputPhone" class="col-sm-2 control-label">Photographer Name</label>

            <div class="col-sm-10">
                <input type="text" class="form-control" value="@Model.PhotographerName" name="PhotographerName" id="PhotographerName" placeholder="PhotographerName" readonly>
            </div>
        </div>
        <div class="form-group">
            <label for="inputExperience" class="col-sm-2 control-label">Message</label>

            <div class="col-sm-10">
                <input class="form-control"  id="Message" name="Message" maxlength="200" value="@Model.Message" readonly></input>
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Warn PhotoGrapher</button>
                <a href="/Admin/Complaindelete/@Html.DisplayFor(model => model.ComplainId)">Delete Complain</a>
            </div>
        </div>
    }
</div>

