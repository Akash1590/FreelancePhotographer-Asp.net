@model IEnumerable<CoolCat.PhotoGrapherLancer.Core.Entities.Client.JobApplied>
@{
    ViewBag.Title = "Index";
    int amount = (int)ViewBag.Amount;
    Layout = "~/Views/Shared/_Layout_AdminPage.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        CompletedJob
        <small>List</small>
    </h1>

</section>

<!-- Main content -->



<section class="content">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">CompletedJob List</h3>

                <div class="box-tools">
                    <form>
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                            <div class="input-group-btn">

                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>


                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>

                        <tr>

                            <th>ID</th>
                            <th>Title</th>
                            <th>Clientname</th>
                            <th>PhotoGraphername</th>
                            <th>Payment</th>

                        </tr>
                        @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.AppliedId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                    <td>
                        <a href="/admin/clientprofiledetails/@Html.DisplayFor(modelItem => item.ClientId)">@Html.DisplayFor(modelItem => item.ClientName)</a>

                    </td>
                    <td>
                        <a href="/admin/Profiledetails/@Html.DisplayFor(modelItem => item.PhotoGrapherID)">@Html.DisplayFor(modelItem => item.PhotographerName)</a>

                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>

                    <td></td>
                </tr>
}





                    </tbody>

                </table>

                <div class="col-md-3">
                    <div class="info-box">


                        <div class="info-box-content">
                            <span class="info-box-text">Total Earnings</span>
                            <a href="/Admin/barchart"><h1> <span>@amount</span></h1></a>

                        </div>

                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->




    </div>



    </div>



</section>







<!-- /.content -->
    </div>

